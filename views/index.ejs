<body class="">
    <div class="background"></div>
    <h2 class="header pl-2 pr-2 pt-3 pb-3"> <i class="fa fa-book"></i> &nbsp;&nbsp;Click on any book to see the details</h2>
    <div class="d-flex justify-content-center p-3 background-white mt-5">
        <div class="d-flex justify-content-center flex-column w-100 mt-1">
            <small class="font-weight-bold p-1">Total Books: <%= count %></small>
            <div class="list-group container-list">
                <% for (var book of books) {%>
                       <a href="<%= '/books/' + book.id %>" class="list-group-item cursor-pointer">
                        <i class="fa fa-book color-theme"></i>
                        <%= book.name %></a>
                    <% } %>
                </div>
        </div>
    </div>

    <br>
    <footer>

    </footer>
